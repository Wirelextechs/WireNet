{
  "buildCommand": "npm run build && npm run migrate",
  "outputDirectory": "dist",
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/**/*,shared/**/*,drizzle/**/*"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
